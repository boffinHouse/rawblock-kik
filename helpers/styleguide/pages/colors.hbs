{{#getColors 'source/assets/sass/settings/_color.scss'}}
        <ul class="u-column-group u-gutters">
            {{#each this}}
                <li class="u-size-20" style="background: {{color}}; height: 200px;">
                    <span>{{name}}    </span>
                    <span>{{color}}</span>
                </li>
            {{/each}}
        </ul>
{{/getColors}}
